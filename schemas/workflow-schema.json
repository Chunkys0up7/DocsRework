{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://banking-docs-code.org/schemas/workflow-schema.json",
  "title": "Workflow Schema",
  "description": "Schema for composed business processes in the Banking Docs-as-Code system",
  "type": "object",
  "required": ["id", "version", "name", "description", "owner", "steward", "components", "flow", "risks", "controls"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^workflow:[a-z0-9-]+:v\\d+\\.\\d+\\.\\d+$",
      "description": "Unique identifier following pattern: workflow:name:vX.Y.Z"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version (MAJOR.MINOR.PATCH)"
    },
    "name": {
      "type": "string",
      "minLength": 3,
      "maxLength": 100,
      "description": "Human-readable name of the workflow"
    },
    "description": {
      "type": "string",
      "minLength": 10,
      "maxLength": 2000,
      "description": "Detailed description of the business process"
    },
    "owner": {
      "type": "string",
      "format": "email",
      "description": "Email of the business owner responsible for this workflow"
    },
    "steward": {
      "type": "string",
      "format": "email",
      "description": "Email of the technical steward maintaining this workflow"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Tags for categorization and discovery"
    },
    "businessContext": {
      "type": "object",
      "properties": {
        "department": {
          "type": "string"
        },
        "businessLine": {
          "type": "string"
        },
        "priority": {
          "type": "string",
          "enum": ["critical", "high", "medium", "low"]
        },
        "frequency": {
          "type": "string",
          "description": "How often this workflow is executed (e.g., daily, on-demand)"
        }
      }
    },
    "components": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["stepId", "componentRef", "componentType"],
        "properties": {
          "stepId": {
            "type": "string",
            "pattern": "^step-[a-z0-9-]+$"
          },
          "componentRef": {
            "type": "string",
            "pattern": "^(atom|molecule|workflow):[a-z0-9-]+:v\\d+\\.\\d+\\.\\d+$"
          },
          "componentType": {
            "type": "string",
            "enum": ["atom", "molecule", "workflow"]
          },
          "description": {
            "type": "string"
          },
          "inputMapping": {
            "type": "object"
          },
          "outputMapping": {
            "type": "object"
          },
          "parallel": {
            "type": "boolean",
            "description": "Can this step execute in parallel with others"
          }
        }
      },
      "description": "Components (atoms, molecules, sub-workflows) composing this workflow"
    },
    "flow": {
      "type": "object",
      "required": ["startStep"],
      "properties": {
        "startStep": {
          "type": "string",
          "pattern": "^step-[a-z0-9-]+$"
        },
        "transitions": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["from", "to"],
            "properties": {
              "from": {
                "type": "string",
                "pattern": "^step-[a-z0-9-]+$"
              },
              "to": {
                "type": "string",
                "pattern": "^step-[a-z0-9-]+$|^END$"
              },
              "condition": {
                "type": "string",
                "description": "Boolean expression for conditional flow"
              },
              "label": {
                "type": "string"
              }
            }
          }
        },
        "parallelBranches": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "branchId": {
                "type": "string"
              },
              "steps": {
                "type": "array",
                "items": {
                  "type": "string",
                  "pattern": "^step-[a-z0-9-]+$"
                }
              },
              "joinAt": {
                "type": "string",
                "pattern": "^step-[a-z0-9-]+$"
              }
            }
          }
        },
        "gates": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["stepId", "type"],
            "properties": {
              "stepId": {
                "type": "string",
                "pattern": "^step-[a-z0-9-]+$"
              },
              "type": {
                "type": "string",
                "enum": ["approval", "validation", "control", "risk-check", "compliance"]
              },
              "approver": {
                "type": "string",
                "format": "email"
              },
              "approvalGroup": {
                "type": "string"
              },
              "validationRules": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "escalation": {
                "type": "object",
                "properties": {
                  "timeoutMinutes": {
                    "type": "integer"
                  },
                  "escalateTo": {
                    "type": "string",
                    "format": "email"
                  }
                }
              }
            }
          }
        },
        "errorHandling": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "stepId": {
                "type": "string",
                "pattern": "^step-[a-z0-9-]+$"
              },
              "errorType": {
                "type": "string"
              },
              "action": {
                "type": "string",
                "enum": ["retry", "skip", "fallback", "escalate", "abort"]
              },
              "fallbackStep": {
                "type": "string",
                "pattern": "^step-[a-z0-9-]+$"
              }
            }
          }
        }
      }
    },
    "inputs": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "type", "required"],
        "properties": {
          "name": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": ["string", "number", "boolean", "object", "array", "file", "document"]
          },
          "required": {
            "type": "boolean"
          },
          "description": {
            "type": "string"
          }
        }
      }
    },
    "outputs": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "type"],
        "properties": {
          "name": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": ["string", "number", "boolean", "object", "array", "file", "document"]
          },
          "description": {
            "type": "string"
          }
        }
      }
    },
    "risks": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^risk:[a-z0-9-]+:v\\d+\\.\\d+\\.\\d+$"
      },
      "description": "References to associated risks"
    },
    "controls": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^control:[a-z0-9-]+:v\\d+\\.\\d+\\.\\d+$"
      },
      "description": "References to implemented controls"
    },
    "regulations": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^regulation:[a-z0-9-]+:v\\d+\\.\\d+\\.\\d+$"
      }
    },
    "sla": {
      "type": "object",
      "properties": {
        "maxDuration": {
          "type": "integer",
          "description": "Maximum duration in seconds"
        },
        "availability": {
          "type": "number",
          "minimum": 0,
          "maximum": 100
        },
        "successRate": {
          "type": "number",
          "minimum": 0,
          "maximum": 100,
          "description": "Required success rate percentage"
        }
      }
    },
    "monitoring": {
      "type": "object",
      "properties": {
        "kpis": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "metric": {
                "type": "string"
              },
              "threshold": {
                "type": "number"
              }
            }
          }
        },
        "alerts": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "condition": {
                "type": "string"
              },
              "severity": {
                "type": "string",
                "enum": ["critical", "high", "medium", "low"]
              },
              "notifyTo": {
                "type": "array",
                "items": {
                  "type": "string",
                  "format": "email"
                }
              }
            }
          }
        }
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        },
        "deprecated": {
          "type": "boolean"
        },
        "supersededBy": {
          "type": "string",
          "pattern": "^workflow:[a-z0-9-]+:v\\d+\\.\\d+\\.\\d+$"
        }
      }
    }
  }
}
