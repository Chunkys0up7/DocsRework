# Application Configuration
APP_NAME=Banking Docs-as-Code
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=true

# Neo4j Knowledge Graph
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_secure_password_here
NEO4J_DATABASE=banking-docs
NEO4J_MAX_CONNECTION_LIFETIME=3600
NEO4J_MAX_CONNECTION_POOL_SIZE=50
NEO4J_CONNECTION_ACQUISITION_TIMEOUT=60

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_SSL=false

# RabbitMQ Message Queue
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/

# Security
SECRET_KEY=your_secret_key_here_change_in_production
JWT_SECRET_KEY=your_jwt_secret_key_here_change_in_production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=30
ENCRYPTION_KEY=your_encryption_key_here_32_bytes

# Authentication
ENABLE_AUTH=true
AUTH_PROVIDER=internal
LDAP_SERVER=
LDAP_BASE_DN=

# NLP Services
NLP_MODEL_PATH=./models/
SPACY_MODEL=en_core_web_lg
TRANSFORMER_MODEL=bert-base-uncased

# OCR Services
TESSERACT_CMD=/usr/bin/tesseract
OCR_LANGUAGE=eng
USE_ABBYY=false
ABBYY_API_KEY=
USE_TEXTRACT=false
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# LLM Services
LLM_PROVIDER=anthropic
ANTHROPIC_API_KEY=your_anthropic_api_key
OPENAI_API_KEY=your_openai_api_key
LLM_MODEL=claude-3-sonnet-20240229
LLM_TEMPERATURE=0.0
LLM_MAX_TOKENS=4096

# Storage
UPLOAD_DIR=./uploads
TEMP_DIR=./tmp
DOCUMENT_STORAGE_PATH=./documents
MAX_UPLOAD_SIZE=52428800

# Email Notifications
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=notifications@bank.example.com
SMTP_PASSWORD=
SMTP_USE_TLS=true
FROM_EMAIL=noreply@bank.example.com

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
SENTRY_DSN=
ENABLE_TRACING=false

# CI/CD
GITHUB_TOKEN=
GITHUB_REPO=Chunkys0up7/DocsRework

# Risk Engine
RISK_CALCULATION_INTERVAL=3600
RISK_THRESHOLD_CRITICAL=17
RISK_THRESHOLD_HIGH=10
RISK_THRESHOLD_MEDIUM=5

# Compliance
COMPLIANCE_CHECK_FREQUENCY=daily
MIN_CONTROL_EFFECTIVENESS=70
MIN_REGULATION_COVERAGE=95

# Workflow Execution
MAX_WORKFLOW_DURATION=7200
WORKFLOW_TIMEOUT_CHECK_INTERVAL=60
ENABLE_PARALLEL_EXECUTION=true
MAX_PARALLEL_TASKS=10

# Testing
TEST_NEO4J_URI=bolt://localhost:7688
TEST_DATABASE=banking-docs-test
RUN_INTEGRATION_TESTS=true
